<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAF6EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/amaranth_bold"
            android:text="Statistics Dashboard"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/users_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/balsamiq_sans_bold"
            android:text="Total Users: 0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/reservations_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/balsamiq_sans_bold"
            android:text="Total Reservations: 0"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/top_countries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/balsamiq_sans_bold"
            android:text="Most Reserving Countries"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/gender_distribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/balsamiq_sans_bold"
            android:text="Gender Distribution"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>