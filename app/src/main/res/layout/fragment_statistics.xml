<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics Dashboard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/users_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Users: 0"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/reservations_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Reservations: 0"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/top_countries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Most Reserving Countries"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/gender_distribution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender Distribution"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>